{
  "compilerOptions": {
    "target": "es2016",
    "jsx": "preserve",
    "lib": ["es2022", "dom"],
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["./src/*"]
    },
    "resolveJsonModule": true,
    "types": ["vitest/globals"],
    "strict": true,
    "strictPropertyInitialization": false,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "exclude": ["dist", "node_modules"]
}
